# You import all the IOs of your board
import board

# These are imports from the kmk library
from kmk.kmk_keyboard import KMKKeyboard
from kmk.scanners.keypad import KeysScanner
from kmk.keys import KC
from kmk.modules.macros import Press, Release, Tap, Macros

# This is the main instance of your keyboard
keyboard = KMKKeyboard()

# Add the macro extension
macros = Macros()
keyboard.modules.append(macros)

# Define your pins here!
PINS = [board.D11, board.D10, board.D9, board.D8, board.D6, board.D4, board.D3, board.D1, board.D2]

##SW 1, D11 --> M
##SW 2, D10 --> Space
##SW 3, D9 --> J
##SW 4, D8 --> Delete
##SW 7, D6 --> M
##Encoder_A, D4 --> Volume Up --> F7 (iteration to macro --> dragging up)
##Encoder_B, D3 --> Volume Down --> F6 (iteration to macro --> dragging down)
##Encoder_Sw1, D1 --> Open up audio control ---> macro: Shift = U
##Encoder_Sw2, D2 --> Open up audio control ---> macro: Shift = U


# Tell kmk we are not using a key matrix
keyboard.matrix = KeysScanner(
    pins=PINS,
    value_when_pressed=False,
)

# Here you define the buttons corresponding to the pins
# Look here for keycodes: https://github.com/KMKfw/kmk_firmware/blob/main/docs/en/keycodes.md
# And here for macros: https://github.com/KMKfw/kmk_firmware/blob/main/docs/en/macros.md
keyboard.keymap = [
    [KC.M, 
     KC.SPACE, 
     KC.J, 
     KC.DELETE, 
     KC.M, 
     KC.KC.Macro(Press(KC.MB_LMB), Tap(KC.MS_UP), Tap(KC.MS_UP), Tap(KC.MS_UP), Release(KC.MB_LMB),), 
     KC.Macro( Press(KC.MB_LMB), Tap(KC.MS_DOWN), Tap(KC.MS_DOWN), Tap(KC.MS_DOWN), Release(KC.MB_LMB),), 
     KC.Macro(Press(KC.LSHIFT), Tap(KC.EQUAL), Tap(KC.U), Release(KC.LSHIFT)),
     KC.Macro(Press(KC.LSHIFT), Tap(KC.EQUAL), Tap(KC.U), Release(KC.LSHIFT)),]
]

# Start kmk!
if __name__ == '__main__':
    keyboard.go()

